{
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "es2023"
    ],
    "module": "commonjs",
    "rootDir": "src",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "outDir": "build",
    "moduleResolution": "node",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true
  },
  "exclude": [
    "build.ts"
  ]
}